---
import logo from '../assets/logo.png';
import { resolvePath } from '../config/site';
---

<nav class="sticky top-0 z-50 bg-white/75 dark:bg-slate-950/85 backdrop-blur-md border-b border-slate-900/5 dark:border-slate-100/10">
  <div class="container mx-auto px-6">
    <div class="flex items-center justify-between py-4">
      <a href={resolvePath('/')} class="flex items-center gap-3 font-semibold tracking-wide hover:opacity-90 transition">
        <img src={logo.src} alt="Falck logo" class="h-9 w-auto" />
        <span class="text-lg">Falck</span>
      </a>
      <div class="hidden md:flex items-center gap-8 text-sm">
        <a href={resolvePath('/download')} class="hover:text-[rgb(var(--color-primary))] transition">Download</a>
        <a href={resolvePath('/modes')} class="hover:text-[rgb(var(--color-primary))] transition">Modes</a>
        <a href={resolvePath('/workflow')} class="hover:text-[rgb(var(--color-primary))] transition">Workflow</a>
        <a href={resolvePath('/features')} class="hover:text-[rgb(var(--color-primary))] transition">Feature pages</a>
        <a href={resolvePath('/#open-source')} class="hover:text-[rgb(var(--color-primary))] transition">Open source</a>
      </div>
      <a
        href={resolvePath('/#cta')}
        class="hidden sm:inline-flex items-center gap-2 rounded-full border border-slate-200/80 dark:border-slate-700/80 px-4 py-2 text-sm font-medium hover:border-[rgb(var(--color-primary))] hover:text-[rgb(var(--color-primary))] transition"
      >
        Start here
        <span aria-hidden="true">-&gt;</span>
      </a>
    </div>
  </div>
</nav>
