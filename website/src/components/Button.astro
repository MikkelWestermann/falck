---
const {
  variant = 'primary',
  href,
  target,
  rel,
  type = 'button',
  class: className = '',
  ...rest
} = Astro.props;
const base =
  'px-6 py-3 rounded-full font-semibold tracking-wide transition-all duration-200 shadow-sm inline-flex items-center justify-center gap-2';
const variants = {
  primary:
    'bg-[rgb(var(--color-primary))] text-white focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-[rgb(var(--color-primary))]',
  secondary:
    'bg-[rgba(var(--color-panel),0.85)] text-[rgb(var(--color-ink))] border border-[rgba(var(--color-border),0.8)]',
};
const classes = `${base} ${variants[variant as keyof typeof variants]} ${className}`.trim();
---

{
  href ? (
    <a class={classes} href={href} target={target} rel={rel} {...rest}>
      <slot />
    </a>
  ) : (
    <button class={classes} type={type} {...rest}>
      <slot />
    </button>
  )
}
