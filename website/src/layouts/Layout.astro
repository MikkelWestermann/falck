---
import '../styles/global.css';
import { SITE } from '../config/site';
import SeoHead from '../components/SeoHead.astro';
import Nav from '../components/Nav.astro';
import ThemeToggle from '../components/ThemeToggle.astro';
---

<html lang={SITE.lang} class="scroll-smooth">
  <head>
    <SeoHead title={Astro.props.title} description={Astro.props.description} />
    <script>
      if (
        localStorage.theme === 'dark' ||
        (!localStorage.theme && window.matchMedia('(prefers-color-scheme: dark)').matches)
      ) {
        document.documentElement.classList.add('dark');
      } else {
        document.documentElement.classList.remove('dark');
      }
    </script>
  </head>
  <body class="bg-slate-50 text-slate-950 dark:bg-slate-950 dark:text-slate-100 transition-colors duration-300">
    <Nav />
    <main class="min-h-[80vh]">
      <slot />
    </main>
    <ThemeToggle />
  </body>
</html>
