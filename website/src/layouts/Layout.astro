---
import '../styles/global.css';
import { SITE } from '../config/site';
import SeoHead from '../components/SeoHead.astro';
import Nav from '../components/Nav.astro';

const { theme = 'light', navVariant } = Astro.props;
const themeClass = theme === 'dark' ? 'dark theme-tech' : 'light theme-nontech';
const navMode = navVariant ?? (theme === 'dark' ? 'tech' : 'default');
---

<html lang={SITE.lang} class={`scroll-smooth ${themeClass}`}>
  <head>
    <SeoHead title={Astro.props.title} description={Astro.props.description} />
  </head>
  <body class="text-slate-950">
    <Nav variant={navMode} />
    <main class="min-h-[80vh]">
      <slot />
    </main>
  </body>
</html>
