{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Falck",
  "version": "0.1.12",
  "identifier": "com.mikkelwestermann.falck",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Falck",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "dragDropEnabled": false,
        "titleBarStyle": "Transparent",
        "backgroundColor": "#f5f7f9",
        "hiddenTitle": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "externalBin": [
      "sidecars/opencode-cli",
      "sidecars/opencode-sidecar"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "signingIdentity": "-",
      "hardenedRuntime": true,
      "entitlements": "entitlements.plist"
    }
  }
}
